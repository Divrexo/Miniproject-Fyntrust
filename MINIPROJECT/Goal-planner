<body>
    <div class="overlay"></div>
    <div class="container">
        <h1>FynTrust - Car EMI Goal Planner</h1>
        <div id="step1" class="step">
            <div class="question">What is your monthly income?</div>
            <div class="options">
                <button onclick="selectOption('income', 30000, 'step1', 'step2')">₹30,000 - ₹50,000</button>
                <button onclick="selectOption('income', 50001, 'step1', 'step2')">₹50,001 - ₹70,000</button>
                <button onclick="selectOption('income', 70001, 'step1', 'step2')">₹70,001 - ₹100,000</button>
            </div>
            <div class="custom-input">
                <input type="number" id="income-custom" placeholder="Custom Income">
                <button class="next-button" onclick="selectCustom('income', 'income-custom', 'step1', 'step2')">Next</button>
            </div>
        </div>

        <div id="step2" class="step hidden">
            <div class="question">How much can you save each month?</div>
            <div class="options">
                <button onclick="selectOption('savings', 10000, 'step2', 'step3')">₹10,000 - ₹20,000</button>
                <button onclick="selectOption('savings', 20001, 'step2', 'step3')">₹20,001 - ₹30,000</button>
                <button onclick="selectOption('savings', 30001, 'step2', 'step3')">₹30,001 - ₹50,000</button>
            </div>
            <div class="custom-input">
                <input type="number" id="savings-custom" placeholder="Custom Savings">
                <button class="next-button" onclick="selectCustom('savings', 'savings-custom', 'step2', 'step3')">Next</button>
            </div>
        </div>

        <div id="step3" class="step hidden">
            <div class="question">What is your desired car EMI?</div>
            <div class="options">
                <button onclick="selectOption('emi', 5000, 'step3', 'result-step')">₹5,000 - ₹10,000</button>
                <button onclick="selectOption('emi', 10001, 'step3', 'result-step')">₹10,001 - ₹15,000</button>
                <button onclick="selectOption('emi', 15001, 'step3', 'result-step')">₹15,001 - ₹20,000</button>
            </div>
            <div class="custom-input">
                <input type="number" id="emi-custom" placeholder="Custom EMI">
                <button class="next-button" onclick="selectCustom('emi', 'emi-custom', 'step3', 'result-step')">Next</button>
            </div>
        </div>

        <div id="result-step" class="step hidden">
            <div class="result" id="result"></div>
        </div>
    </div>

    <script>
        let userData = {};

        function selectOption(field, value, currentStep, nextStep) {
            userData[field] = value;
            nextStepTransition(currentStep, nextStep);
        }

        function selectCustom(field, inputId, currentStep, nextStep) {
            const value = document.getElementById(inputId).value;
            if (value) {
                userData[field] = Number(value);
                nextStepTransition(currentStep, nextStep);
            }
        }

        function nextStepTransition(currentStep, nextStep) {
            document.getElementById(currentStep).classList.add('hidden');
            document.getElementById(nextStep).classList.remove('hidden');
            if (nextStep === 'result-step') {
                calculateYears();
            }
        }

        function calculateYears() {
            const { income, savings, emi } = userData;

            if (income && savings && emi) {
                const surplus = savings - emi;
                let years = 0;

                if (surplus > 0) {
                    const totalAmount = emi * 12;
                    years = totalAmount / surplus;
                    years = years.toFixed(2);
                } else {
                    years = "not possible with the current savings.";
                }

                document.getElementById("result").innerHTML = `It will take approximately <strong>${years}</strong> years to cover the car EMI.`;
            } else {
                document.getElementById("result").innerHTML = "Please fill out all the fields.";
            }
        }
    </script>
</body>
